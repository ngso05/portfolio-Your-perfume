      size     : 36,
      starOff:  '<%= asset_path('star-off.png') %>',
      starOn : '<%= asset_path('star-on.png') %>',
      starHalf: '<%= asset_path('star-half.png') %>',
      scoreName: 'post[rate_time]',
      half: true,
    });
    </script>
  </div>

 <div class="review" id="star3">
    <%= f.label :rate_price,'価格', class:'col-md-3 col-form-label' %>
    <%= f.hidden_field :rate_price, id: :review_star3 %>
