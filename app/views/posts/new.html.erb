<h1>新規投稿</h1>
<%= form_with model: @post, local:true do |f| %>
<h4>投稿画像</h4>
<%= f.attachment_field :image %>

<div class="review_star">
  <div class="review" id="star1">
    <h4>評価</h4>
    <%= f.label :rate_smell,'香り', class:'col-md-3 col-form-label' %>
    <%= f.hidden_field :rate_smell, id: :review_star1 %>
    <script>
    $('#star1').raty({
      size     : 36,
      starOff:  '<%= asset_path('star-off.png') %>',
      starOn : '<%= asset_path('star-on.png') %>',
      starHalf: '<%= asset_path('star-half.png') %>',
      scoreName: 'post[rate_smell]',
      half: true,
    });
    </script>
  </div>

　<div class="review" id="star2">
    <%= f.label :rate_time,'持続性', class:'col-md-3 col-form-label' %>
    <%= f.hidden_field :rate_time, id: :review_star2 %>
