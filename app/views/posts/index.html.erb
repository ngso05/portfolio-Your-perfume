<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <h1 class="post-title">おすすめ投稿</h1>
      <% @random.each do |post| %>
      <div class="post-box">
        <%= link_to post_path(post.id) do %>
        <%= attachment_image_tag post, :image, :size =>'200x200' %>
        <% end %>
        <p>ユーザーネーム<%= post.user.name %></p>
      </div>
      <% end %>
    </div>
    <div class="col-xs-8">
      <h1class="post-title">投稿一覧</h1>
      <div class="post-wrap">
        <% @posts.each do |post| %>
        <div class="post-box">
          <%= link_to post_path(post.id) do %>
          <%= attachment_image_tag post, :image, :size =>'200x200' %>
          <% end %>
          <p>ユーザーネーム<%= post.user.name %></p>
        </div>
        <% end %>
        <%= paginate @posts %>
      </div>
    </div>
  </div>
</div>
